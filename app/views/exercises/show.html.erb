<%= link_to exercises_path, class: 'btn btn-link p-0' do %>
    Exercises
<% end %>
<hr/>
<%= link_to edit_exercise_path(@exercise), class: 'btn btn-primary float-end' do %>
  Edit
<% end %>
<h1><%= @exercise.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-5 ps-0 pe-4">
      <p><%= simple_format @exercise.description %></p>
    </div>
    <div class="col-md-7 ps-4">
      <pre class="mt-g"><code><%= @exercise.tests %></pre></code>
    </div>
  </div>
</div>

</hr>

<div class="row">
  <div class="col-sm-6">
    <h2>Iterations</h2>
  </div>

  <div class="col-sm-6 text-end">
    <%= link_to new_iteration_path, class: 'btn btn-primary' do %>
      Add New Iteration
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Version</th>
        <th>Created at</th>
      </tr>
    </thead>
    <tbody>
      <% @iterations.each_with_index do |iteration, index| %>
        <%= content_tag :tr, id: dom_id(iteration), class: dom_class(iteration) do %>
          <td><%= index + 1 %></td>
          <td><%= link_to iteration.created_at.strftime("%d %B %Y at %-k:%M"), iteration %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
